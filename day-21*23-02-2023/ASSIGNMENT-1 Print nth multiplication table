//using while loop
#include<stdio.h>
main()
{
int num,i;
printf("Enter a number:");
scanf("%d",&num);
i=1;
while(i<=15)
{
printf("\n%d x %d = %d",num,i,num*i);
i++;
}
}

(or)

//using for loop
#include<stdio.h>
main()
{
int num,i;
printf("Enter a number:");
scanf("%d",&num);
for(i=1;i<=15;i++)
{
printf("\n%d x %d = %d",num,i,num*i);
}
}
